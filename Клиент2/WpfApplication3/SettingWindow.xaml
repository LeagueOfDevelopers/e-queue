<Window x:Class="WpfApplication3.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка соединения с сервером" Height="194" Width="525" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="IP адрес удаленного сервера" HorizontalAlignment="Left" Margin="43,25,0,0" VerticalAlignment="Top" Width="206"/>
        <TextBox Name="ipTextBox" HorizontalAlignment="Left" Height="23" Margin="254,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
        <Label Content="Порт доступа удаленного сервера" HorizontalAlignment="Left" Margin="43,67,0,0" VerticalAlignment="Top" Width="206"/>
        <TextBox Name="portTextBox" HorizontalAlignment="Left" Height="23" Margin="254,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
        <Button Name ="bSave" Content="Сохранить" HorizontalAlignment="Left" Margin="147,121,0,0" VerticalAlignment="Top" Width="75" Click="bSave_Click" IsDefault="True"/>
        <Button Content="Отмена" Margin="0,121,147,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="bCancel_Click"/>

    </Grid>
</Window>
